<?xml version="1.0"?>
<block>
  <name>Variable Length Packet Handler</name>
  <key>si446x_var_len_packet_handler</key>
  <category>[si446x]</category>
  <import>import si446x</import>
  <make>si446x.var_len_packet_handler($sync, $has_crc.key, $check_crc.key, $crc_poly)</make>

  <param>
    <name>Sync Word (2 bytes)</name>
    <key>sync</key>
    <type>int</type>
  </param>

  <param>
    <name>Has CRC</name>
    <key>has_crc</key>
    <type>enum</type>
    <option>
      <name>True</name>
      <key>True</key>
      <opt>key:True</opt>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
      <opt>key:False</opt>
    </option>
  </param>

  <param>
    <name>Check CRC</name>
    <key>check_crc</key>
    <type>enum</type>
    <option>
      <name>True</name>
      <key>True</key>
      <opt>key:True</opt>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
      <opt>key:False</opt>
    </option>
  </param>

  <param>
    <name>CRC Polynomial</name>
    <key>crc_poly</key>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <source>
    <name>out</name>
    <type>message</type>
  </source>

</block>
