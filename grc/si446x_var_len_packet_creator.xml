<?xml version="1.0"?>
<block>
  <name>Variable Length Framer</name>
  <key>var_len_packet_creator</key>
  <category>[si446x]</category>
  <import>import si446x</import>
  <make>si446x.var_len_packet_creator($preamble_bytes, $sync, $has_crc.key, $crc_poly)</make>

    <param>
      <name>Preamble Length (bytes)</name>
      <key>preamble_bytes</key>
      <type>int</type>
    </param>

    <param>
      <name>Sync Word (2 bytes)</name>
      <key>sync</key>
      <type>int</type>
    </param>

    <param>
      <name>Has CRC</name>
      <key>has_crc</key>
      <type>enum</type>
      <option>
        <name>True</name>
        <key>True</key>
        <opt>key:True</opt>
      </option>
      <option>
        <name>False</name>
        <key>False</key>
        <opt>key:False</opt>
      </option>
    </param>

    <param>
      <name>CRC Polynomial</name>
      <key>crc_poly</key>
      <type>int</type>
    </param>


    <sink>
      <name>in</name>
      <type>message</type>
    </sink>
    <source>
      <name>out</name>
      <type>message</type>
    </source>
  </block>
